<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardElevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginBottom="@dimen/margin_bottom_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_text"
                android:text="@string/category_mixed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/margin_left_history"
                android:textSize="18dp"
                android:layout_marginTop="@dimen/margin_top_history"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ic_more_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top_history"
                android:src="@drawable/ic_more_horiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/correct_answers_text"
                android:text="@string/correct_answers"
                app:layout_constraintTop_toBottomOf="@id/category_text"
                app:layout_constraintLeft_toLeftOf="@id/category_text"
                android:layout_marginTop="@dimen/margin_top_history_correct_answers"
                android:layout_width="wrap_content"
                android:textSize="@dimen/history_text_size"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/correct_answers_text_result"
                android:text="8/10"
                app:layout_constraintTop_toBottomOf="@id/category_text"
                app:layout_constraintLeft_toRightOf="@id/correct_answers_text"
                android:layout_marginTop="@dimen/margin_top_history_correct_answers"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/history_text_size"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/difficulty_text"
                android:text="@string/difficulty"
                app:layout_constraintTop_toBottomOf="@id/correct_answers_text"
                app:layout_constraintLeft_toLeftOf="@id/correct_answers_text"
                android:layout_marginTop="@dimen/margin_top_history"
                android:textSize="@dimen/history_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/difficulty_text_categories"
                android:text="All"
                app:layout_constraintTop_toBottomOf="@id/correct_answers_text_result"
                app:layout_constraintLeft_toRightOf="@id/difficulty_text"
                android:layout_marginTop="@dimen/margin_top_history"
                android:layout_marginLeft="@dimen/margin_top_history"
                android:textSize="@dimen/history_text_size"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_history"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/history_date"
                app:layout_constraintTop_toBottomOf="@id/difficulty_text"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:text="@string/history_date"
                android:textSize="@dimen/history_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>